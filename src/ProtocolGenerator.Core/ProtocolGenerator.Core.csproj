<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ClangSharp" Version="18.1.0" />
    <PackageReference Include="ClangSharp.Interop" Version="18.1.0" />
    <PackageReference Include="libclang.runtime.win-x64" Version="18.1.3" />
    <PackageReference Include="Scriban" Version="5.10.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\templates\**" CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\..\config\**" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
